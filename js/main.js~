function shine(span){
	$(span).css('color','red');
}
$(document).ready(function(){
		$('#me').click(function(){
				var letterSpans = new Array();
				letterSpans = $(this).children().text();
				
				$('#me span').each( function(){
						setTimeout(shine(this), 300);
				});
				//setTimeout(function(){
				//		$(letterSpans[i]).css('color','green');
				//		i++;
				//},300);
		});
});
